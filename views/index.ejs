<%-include("partials/header.ejs") %>
<body>
  <%-include("partials/navbar.ejs") %>
  <main>
    <div class="container">
      <% result.articles.rows.forEach(article=>{ %>
      <div class="card">
          <div class="card-header">
           <h2><%= article.title %></h2> 
          </div>
          <div class="card-body">
            <a class="btn btn-primary" href="/article/<%=article.slug %>">Ler mais</a> 
          </div>
      </div>
      <br>
      <%}) %>
      <div class="row">
        <div class="col col-12" >
          <% if(result.articles.count > (parseInt(result.offset)+4)){ %> 
            <a  style="float:right;" href="/page/<%= parseInt(result.page)+1 %>"> Next >>></a> 
          <% } %>
          <% if(result.page > 1){ %>
            <a  style="float:left;" href="./<%= parseInt(result.page)-1 %>"> <<< Prev </a> 
          <% }  %>
        </div>
      </div>
    </div>
  </main>
</body>
<%-include("partials/footer.ejs") %>