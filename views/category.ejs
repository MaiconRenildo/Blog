<%-include("partials/header.ejs") %>
<body>
  <%-include("partials/navbar.ejs") %>
  <main>
    <div class="container">
      <hr>
      <h1><%= result.category.title%></h1>
      <hr>
      <% result.articles.rows.forEach(article=>{ %>
      <div class="card">
          <div class="card-header">
           <h2><%= article.title %></h2> 
          </div>
          <div class="card-body">
            <a class="btn btn-primary" href="/article/<%=article.slug %>">Ler mais</a> 
          </div>
      </div>
      <br>
      <%}) %>
      <div class="row">
        <div class="col col-12" >
          <% if(result.articles.count > (parseInt(result.offset)+4)){ %> 
            <a  style="float:right;" href="./<%= parseInt(result.page)+1 %>">next>>></a> 
          <% } %>
          <% if(result.page > 1){ %>
            <a  style="float:left;" href="./<%= parseInt(result.page)-1 %>"> anterior</a> 
          <% }  %>
        </div>
      </div>
  </main>
</body>
<%-include("partials/footer.ejs") %>
