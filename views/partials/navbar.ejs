  <script>
  var check=document.getElementById("check")
  var menuLateral=document.getElementById("Menu-Lateral")
  check.onclick=function(){
    if(check.checked){
      menuLateral.style="left:0px"
    }else{
      menuLateral.style="left:-360px"
    }
  }
</script>

